<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/choose_theme"
        android:textColor="@color/button_colors"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <LinearLayout
        android:layout_width="309dp"
        android:layout_height="269dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.37">

        <Button
            android:id="@+id/switch_to_dark_theme_btn"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:backgroundTint="@color/button_colors"
            android:text="@string/switch_to_dark_theme"
            android:textColor="@color/button_text_color" />

        <Button
            android:id="@+id/switch_to_orange_yellow_theme"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:backgroundTint="@color/button_colors"
            android:text="@string/switch_to_orange_yellow_theme"
            android:textColor="@color/button_text_color" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:backgroundTint="@color/button_colors"
            android:text="Switch to ... theme"
            android:textColor="@color/button_text_color" />

        <Button
            android:id="@+id/change_appearance_back_btn"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:backgroundTint="@color/button_colors"
            android:text="@string/back_btn_text"
            android:textColor="@color/button_text_color" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>